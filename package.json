{
  "name": "kaiser-directory-tree",
  "displayName": "Kaiser's Directory Tree",
  "description": "Kaiser's Directory Tree is a Visual Studio Code extension that allows you to copy a directory tree to the clipboard or save it to a file in the root of the directory. The directory tree can be copied or saved in either a text format or a JSON format.",
  "version": "0.0.1",
  "publisher": "DavidKaiser",
  "author": {
    "name": "David Cory Kaiser"},
  "repository": {
    "type": "git",
    "url": "https://github.com/jackel27/kaiser-dir-tree-vscode-ext.git"},
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kaiser-directory-tree.copyDirTreeAsText",
        "title": "Copy Directory Tree as Text"
      },
      {
        "command": "kaiser-directory-tree.copyDirTreeAsJson",
        "title": "Copy Directory Tree as JSON"
      },
      {
        "command": "kaiser-directory-tree.saveDirTreeAsText",
        "title": "Save Directory Tree as Text"
      },
      {
        "command": "kaiser-directory-tree.saveDirTreeAsJson",
        "title": "Save Directory Tree as JSON"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "kaiser-directory-tree.copyDirTreeAsText",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "kaiser-directory-tree.copyDirTreeAsJson",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "kaiser-directory-tree.saveDirTreeAsText",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "kaiser-directory-tree.saveDirTreeAsJson",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "copy-paste": "^1.5.3"
  },
  "homepage": "https://github.com/jackel27/kaiser-dir-tree-vscode-ext"
}
